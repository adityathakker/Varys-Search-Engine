  data-media="http%3A%2F%2Fgreatist.com%2Fsites%2Fdefault%2Ffiles%2Fstyles%2Fbig_share%2Fpublic%2Fsidewalk-fight_0.jpg%3Fitok%3DYUEneedO"
  data-mediatitle="7 Things You Should Stop Apologizing For"
  data-title="7 Things You Should Stop Apologizing For"
  data-promotitle="7 Things You Should Stop Apologizing For"
  data-pintitle="Sorry we\'re not sorry. Here\'s when being polite actually doesn\'t pay off."
  data-twitter="https://twitter.com/ktschreib"
