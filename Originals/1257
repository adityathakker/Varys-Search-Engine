  "@context": "http://schema.org",
  "@type": "Article",
  "mainEntityOfPage": {
    "@type":"WebPage",
    "@id":"http://greatist.com/live/i-tried-to-be-a-morning-person-for-30-days"
  },
  "headline": "I Tried to Be a Morning Person for 30 Days. Here's What Worked (and What Didn't)",
  "alternativeHeadline": "Here's What Happened When I Tried to Become a Morning Person for 30 Days",
  "image": {
    "@type": "ImageObject",
    "url": "http://greatist.com/sites/default/files/iStock_000072799657_Large.jpg",
    "height": 1810,
    "width": 2716
  },
  "datePublished": "2016-04-26T00:31:00-04:00",
  "dateModified": "2016-06-06T14:02:28-04:00",
  "description": "Early to bed, early to rise—not as easy as it sounds. ",
  "about": [
    {
      "@type": "Thing",
      "name": "Live",
      "sameAs": "http://greatist.com/live"
    },
    {
      "@type": "Thing",
      "name": "Morning",
      "sameAs": "http://greatist.com/morning"
