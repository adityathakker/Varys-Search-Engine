      itemscope
      itemtype="http://schema.org/Article"
    >
      <div class="article-top">
                  <div itemprop="description" class="element-hidden">Here&#039;s an important lesson guys can learn from the ladies. </div>
                <header class="article-header">
          <div class="group-article-meta">
            <div
  class="field field-name-post-date"
  itemprop="datePublished"
  content="2016-07-28"
>
  July 28, 2016  <span class="separator">|</span> </div>
            <div class="field article-author-top" itemscope itemprop="author" itemtype="http://schema.org/Person">
  <span class="label">By </span>
       <span><a
          href="http://greatist.com/p/nickjaa"
          title="User profile of "
          class="username"
          about="http://greatist.com/p/nickjaa"
          typeof="sioc:UserAccount"
          itemprop="url"
        ><span itemprop="name">Nick English</span>
        </a>
      </span>
    </div>
          </div>
          <h1 class="title" id="page-title" itemprop="name headline alternativeHeadline">The Men’s Fitness Industry Is Missing Out on the Body-Positivity Movement. And It Sucks</h1>
        </header>
        <div class="top-share">
          <div class="group_share" data-recirc-section>
  <div class="share-buttons icons" data-origin="top">
    <div ng-controller="socialCtrl"
  data-href="http://greatist.com/live/mens-fitness-industry-is-missing-out-on-the-body-positivity-movement"
