    <div id="fb-article-mobile-bottom-page-box" data-fb-page="article-mobile-bottom-page-box" data-restrict-context-to=">medium" class="hide-for-ready">
      <h2 class="section-title">Like Us On Facebook</h2>
    </div>

    <div id="tags">
      <span
  rel="dc:subject"
  itemscope
        >
  <a
    href="http://greatist.com/smoking"
    typeof="skos:Concept"
    property="rdfs:label skos:prefLabel"
      >
    <span
          >
      Smoking    </span>
  </a>
</span>
      <span
  rel="dc:subject"
  itemscope
        >
  <a
    href="http://greatist.com/healthy-habits"
    typeof="skos:Concept"
    property="rdfs:label skos:prefLabel"
      >
    <span
          >
      Healthy Habits    </span>
  </a>
</span>
  
            <span
  rel="dc:subject"
  itemscope
            itemtype="http://data-vocabulary.org/Breadcrumb"
