	static final String PREF_KEY_OAUTH_TOKEN = &quot;oauth_token&quot;;
	static final String PREF_KEY_OAUTH_SECRET = &quot;oauth_token_secret&quot;;
	static final String PREF_KEY_TWITTER_LOGIN = &quot;isTwitterLogedIn&quot;;

