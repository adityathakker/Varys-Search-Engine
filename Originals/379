    &lt;color name=&quot;bg_screen3&quot;&gt;#3395ff&lt;/color&gt;
    &lt;color name=&quot;bg_screen4&quot;&gt;#c873f4&lt;/color&gt;

    &lt;!-- dots inactive colors --&gt;
    &lt;color name=&quot;dot_dark_screen1&quot;&gt;#d1395c&lt;/color&gt;
