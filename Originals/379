        android:gravity=&quot;center_horizontal&quot;
        android:orientation=&quot;vertical&quot;&gt;

        &lt;ImageView
            android:layout_width=&quot;@dimen/img_width_height&quot;
            android:layout_height=&quot;@dimen/img_width_height&quot;
            android:src=&quot;@drawable/ic_movie&quot; /&gt;

