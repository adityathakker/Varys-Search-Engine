            android:layout_marginLeft=&quot;16dp&quot;
            android:lines=&quot;1&quot;
            android:layout_height=&quot;wrap_content&quot;
            android:layout_weight=&quot;3&quot; /&gt;

        &lt;Button android:id=&quot;@+id/btn_send&quot;
