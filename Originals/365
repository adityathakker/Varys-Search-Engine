        android:layout_alignParentTop=&quot;true&quot;/&gt;

    &lt;TextView android:id=&quot;@+id/count&quot;
        android:layout_width=&quot;20dp&quot;
        android:layout_height=&quot;20dp&quot;
        android:gravity=&quot;center&quot;
